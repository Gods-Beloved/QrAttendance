<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/id_background"
        android:layout_height="match_parent"
        tools:context=".signin.StudentId">



        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/v_username"
                android:hint="Enter your student ID number"
                style="@style/studentEditText"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <Button
                android:id="@+id/v_next_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/id_login_button_background"
                android:text="Next"
                android:textColor="@color/black"
                app:backgroundTint="@color/id_button" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

